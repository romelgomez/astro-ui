---
import '@/styles/globals.css';
import Accordions from '@/components/Accordion/Index.astro';
import Alert from '@/components/Alert/Index.astro';
import AlertDialog from '@/components/AlertDialog/Index.astro';
import Buttons from '@/components/Button/Index.astro';
import Section from '@/components/Section.astro';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
	</head>
	<body>
		<h1>Astro - Shadcn UI</h1>

		<Section title="Buttons">
			<Buttons />
		</Section>

		<Section title="Accordions">
			<Accordions />
		</Section>

		<Section title="Alerts">
			<Alert />
		</Section>

		<Section title="Alert Dialog">
			<AlertDialog />
		</Section>
	</body>
</html>

<style>
	h1 {
		margin: 10px;
		font-size: x-large;
		font-weight: 600;
	}
</style>
