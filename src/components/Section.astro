---
// import '@/styles/globals.css';
const { title } = Astro.props;
---

<section>
    <h2>{title}</h2>
    <div class="elements">
        <slot />
    </div>
</section>

<style>
    h2 {
        margin-bottom: 10px;
        font-size: larger;
        font-weight: 600;
    }

    section {
        border: 1px solid;
        padding: 10px;
        margin: 10px;
        border-bottom-width: 2px;
        border-right-width: 2px;
    }

    .elements {
        /* background-color: antiquewhite; */
        padding: 10px;
    }
</style>
